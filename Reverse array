#include <iostream>
#include <climits>
using namespace std;
int main() {
    int n,a[100];
    cout<<"Enter size of array: ";
    cin>>n;
    cout<<"Enter array: ";
    for(int i=0;i<n;i++)
    {
        cin>>a[i];
    }
    cout<<"Original array: ";
    for(int i=0;i<n;i++)
    {
        cout<<a[i]<<" ";
    }
    cout<<endl;
    cout<<"Reversed array: ";
    for(int i=n-1;i>=0;i--)
    {
        cout<<a[i]<<" ";
    }
}
