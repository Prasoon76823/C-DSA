#include <iostream>
#include<cmath>
using namespace std;
int bd(int n)
{
    int res=0,p=0;
    while(n>0)
    {
        int rem=n%10;
        res+=(rem*pow(2,p));
        p++;
        n=n/10;
    }
    return res;
}
int main()
{
    int n;
    cout<<"Enter n: ";
    cin>>n;
    int res=bd(n);
    cout<<"Decimal: "<<res;
}
