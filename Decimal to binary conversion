#include <iostream>
using namespace std;
int main() {
    int n,a[100];
    cout<<"Enter n: ";
    cin>>n;
    int c=0;
    while(n>0)
    {
        a[c]=n%2;
        n=n/2;
        c++;
    }
    for(int i=c-1;i>=0;i--)
    {
        cout<<a[i];
    }
    cout<<endl;
    return 0;
}
//..................................................
int main()
{
    int n,pow=1,res=0;
    cout<<"Enter n: ";
    cin>>n;
    while(n>0)
    {
        int rem=n%2;
        n=n/2;
        res=res+(rem*pow);
        pow=pow*10;
    }
    cout<<"Binary: "<<res;
}
